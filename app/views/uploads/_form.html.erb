      <h2><%= pluralize(upload.errors.count, "error") %> prohibited this upload from being saved:</h2>

      <ul>
      <% upload.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="form-group">
    <%= f.label "Video" %>
    <%= f.file_field :video %>
  </div>

  <div class="form-group">
    <%= f.hidden_field :user_id, value: current_user.id %>
  </div>

  <div class="form-group">
    <%= f.hidden_field :author, value: current_user.name %>
  </div>

  <div class="form-group">
    <%= f.hidden_field :teacher_id, value: current_user.teacher_id %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
