<p id="notice"><%= notice %></p>

<h1>Uploads</h1>


  <div class="row">
    <% @uploads.each do |upload| %>
      <div class="col-md-10 col-md-offest-1">
        <div class="panel panel-default">
          <div class="panel-heading">
            <p>by <%= link_to upload.author, upload %></p>
            <p>at <%= upload.created_at.strftime("%l:%M%p %m/%d/%y") %></p>
          </div>
          <div class="panel-body">
            <p><%= upload.description %></p>
            <%= video_tag upload.video.url, class: "lilvid" %>
          </div>
          <div class="panel-footer">
            <%= link_to 'Show', upload %>
            <%= link_to 'Edit', edit_upload_path(upload) %>
            <%= link_to 'Destroy', upload, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

<br>

