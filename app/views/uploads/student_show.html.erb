<h1>Your Uploads</h1><br />
 
<div class="row">
    <% @uploads.each do |upload| %>
      <div class="col-md-10 col-md-offest-2">
        <div class="panel panel-default">
          <div class="panel-heading">
            <p>by <%= link_to upload.author, upload %></p>
            <p>at <%= upload.created_at.strftime("%l:%M%p %m/%d/%y") %></p>
          </div>
          <div class="panel-body">
            <p><%= upload.description %></p>
            <%= upload.file %>
          </div>
          <div class="panel-footer">
            <%= link_to 'Comment', upload %>
            <%= link_to 'Delete', upload, method: :delete, data: { confirm: 'Are you sure?' }, class: "pull-right" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
